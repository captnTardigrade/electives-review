<header class="p-3 mb-3 bg-dark text-white">
    <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
            <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                <img src="/images/logo.svg" alt=""
                    class="">
            </a>

            <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                <li><a href="/electives" class="nav-link px-2 text-white">All Electives</a></li>
                <li><a href="/" class="nav-link px-2 text-white">Electives By Branch</a></li>
            </ul>
            <% if (!currentUser) { %>
                <div class="text-end">
                    <a href="/login" id="login" class="btn btn-outline-light me-2">Login</a>
                    <a href="/signup" id="signup" class="btn btn-warning">Sign-up</a>
                </div>
                <% } else { %>
                    <div class="text-end">
                        <a href="/logout" id="logout" class="btn btn-outline-light me-2">Logout</a>
                    </div>
                    <% } %>
        </div>
    </div>
</header>